
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-sm-6">
        <div class="container">
            <canvas id='canvas' width="600" height="600">Ваш браузер устарел!</canvas>
            @if (ViewBag.isDrawer)
            {
                <div id="palette"></div>
                <div id="clear">Очистить изображеие</div>
            }
        </div>
    </div>
    <div class="col-sm-6 text-center">
        <h6 id="connectedCount" class="d-inline">Подключено(0/8)</h6>
        <button type="submit" formmethod="post" class="btn btn-success d-inline m-3">Начать игру</button>
        <div class="detailBox">
            <div class="actionBox">
                <ul class="commentList overflow-auto" id="chatroom">
                </ul>
                <div class="form-inline mb-1">
                    <div class="form-group">
                        <input id="inputMessage" class="form-control" type="text" placeholder="" />
                    </div>
                    <div class="form-group m-1">
                        <button id="sendButton" class="btn btn-secondary">Отправить</button>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>






<div id="chatroom">

</div>

@if (ViewBag.isDrawer)
{
    <script src="~/Scripts/draw.js"></script>
}
else
{
    <script src="~/Scripts/getDraw.js"></script>
}



