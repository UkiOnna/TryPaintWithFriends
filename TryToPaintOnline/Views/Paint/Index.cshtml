
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-sm-6">
        <div class="container">
            <canvas id='canvas' width="600" height="600">Ваш браузер устарел!</canvas>
            @if (ViewBag.isDrawer)
            {
                <div id="palette"></div>
                <div id="clear">Очистить изображеие</div>
            }
        </div>
    </div>
    <div class="col-sm-6">
        <div class="detailBox">
            <div class="actionBox">
                <ul class="commentList" id="chatroom">
                    <li>
                        <div><h6>Barry:</h6></div>
                        <div class="commentText">
                            <p class="">Hello this is a test comment and this comment is particularly very long and it goes on and on and on.</p>
                        </div>
                    </li>
                </ul>
                <div class="form-inline">
                    <div class="form-group">
                        <input id="inputMessage" class="form-control" type="text" placeholder="" />
                    </div>
                    <div class="form-group">
                        <button id="sendButton" class="btn btn-default">Отправить</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>






<div id="chatroom">

</div>

@if (ViewBag.isDrawer)
{
    <script src="~/Scripts/draw.js"></script>
}
else
{
    <script src="~/Scripts/getDraw.js"></script>
}



