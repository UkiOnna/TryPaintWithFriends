
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
            <form name="myform" action="" class="">
                <div class="form-row">
                    <div class="form-group m-3">
                        <label>Введите имя</label>
                        <input class="form-control" type="text" name="customer" placeholder="Имя..">
                        <button type="submit" class="btn btn-primary mt-2" onclick="WriteCookie();">Создать комнату</button>
                    </div>
                    
                    <div class="form-group m-3">
                        <label>Введите номер комнаты</label>
                        <input class="form-control" type="text" name="number" placeholder="Номер..">
                        <button type="submit" class="btn btn-primary mt-2" onclick="WriteCookie();">Подключиться к комнате</button>
                    </div>
                    
                </div>
            </form>
    </div>
</div>


